<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AyarlarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonAyarlarBildirimler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BİLDİRİMLER" />

        <Button
            android:id="@+id/buttonAyarlarDestekOl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BİZE DESTEK OL" />

        <Button
            android:id="@+id/buttonAyarlarHakkinda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HAKKINDA" />
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->


</FrameLayout>