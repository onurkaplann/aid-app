<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewProfilResim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp" />

                <TextView
                    android:id="@+id/textViewProfilTampon1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    />

                <TextView
                    android:id="@+id/textviewProfilAdSoyad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ad Soyad"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#FF012E16"
                    />

                <TextView
                    android:id="@+id/textViewProfilTampon2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:id="@+id/layoutProfilButonlar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:paddingBottom="60dp">

                    <Button
                        android:id="@+id/buttonProfilIstatistikler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="İSTATİSTİKLER" />

                    <Button
                        android:id="@+id/buttonProfilHatirlatici"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HATIRLATICI" />

                    <Button
                        android:id="@+id/buttonProfilDuzenle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/layoutProfilButonlar"
                        android:layout_alignTop="@+id/layoutProfilButonlar"
                        android:text="PROFİLİ DÜZENLE" />

                    <Button
                        android:id="@+id/buttonProfilAyarlar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AYARLAR" />

                    <Button
                        android:id="@+id/buttonProfilBagisOlustur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/buttonProfilBagisTaleplebiOlustur" />

                    <Button
                        android:id="@+id/buttonProfilBagislarim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/buttonProfilBagisTaleplerim" />

                    <Button
                        android:id="@+id/buttonProfilCikisYap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/buttonProfilCikisYap" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/textViewProfilTampon3"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>

    <!-- TODO: Update blank fragment layout -->

</FrameLayout>