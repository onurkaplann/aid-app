<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SifremiUnuttum">

    <Spinner
        android:id="@+id/spinnerSifremiUnuttum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textviewSifremiUnuttumEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textviewSifremiUnuttumEmail"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#FF012E16"/>

    <EditText
        android:id="@+id/editTextSifremiUnuttumEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/buttonSifremiUnuttumGonder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonSifremiUnuttumGonder" />
</LinearLayout>